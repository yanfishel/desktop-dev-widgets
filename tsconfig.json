{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@*": ["src/*"],
      "@assets/*": ["./src/assets/*"],
       "@config/*": ["./src/config/*"],
       "@constants/*": [ "./src/constants/*"],
       "@controllers/*": [ "./src/controllers/*"],
       "@electron/*": [ "./src/electron/*"],
       "@ipc/*": [ "./src/ipc/*"],
       "@types/*": [ "./src/types/*"],
       "@utils/*": [ "./src/utils/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
